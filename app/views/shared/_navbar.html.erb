
<header class="masthead mb-auto">
  <div class="inner">
      <nav class="navbar navbar-expand-md navbar-dark fixed-top">
      <a class="navbar-brand" href="#">A Porter's Tale</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
            <%= nav_helper 'nav-link', 'li class="app-nav"' %>
        </ul>

        <form class="form-inline my-2 my-lg-0">
          <!-- <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search"> -->

          <% if current_user %>

            <%= link_to "logout", destroy_user_session_path, method: :delete, class: "btn btn-info my-2 my-sm-0 m-md-1"%>

            <% else %>

            <%= link_to image_tag("patreon.png", size:"128x32"),
              "http://www.patreon.com"
              %>

            <% end %>

        </form>
      </div>
    </nav>
  </div>
</header>
