
<div class="container">
  <div class="row">

    <div class="col-md-1" style="background-color: blue">
        <% if @is_first == "false" %>
          <%= link_to 'Previous', comic_path(@comic.id - 1) %>
        <% end %>

    </div>
    <div class="col-md-10">
      <p> <%= @comic.title %> </p>
      <br>
      <button type="button" class="btn btn-sm btn-outline-secondary">
          <%= link_to "Edit", edit_comic_path(@comic.id) %>
      </button>
      <button type="button" class="btn btn-sm btn-outline-secondary">
         <%= link_to "Delete", comic_path(@comic.id), method: :delete, data: {confirm: 'Delete Comic?'} %>
      </button>
      <br>
      <%= image_tag @comic.main_image, alt: @comic.title %>
    </div>

    <div class="col-md-1" style="background-color: red">

      <% if @is_last == "false" %>
        <%= link_to 'Next', comic_path(@comic.id + 1) %>
      <% end %>
    </div>

    </hr>
  </div>
</div>
