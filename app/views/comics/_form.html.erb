<%= form_with(model: comic, local: true) do |form| %>
  <% if comic.errors.any? %>
      <% comic.errors.full_messages.each do |error| %>
        <%= alert_generator error %>
      <% end %>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, id: :title,  class: 'form-control', placeholder: 'Title' %>
  </div>

  <div class="form-group">
    <%= form.text_area :description, id: :description,  class: 'form-control', placeholder: 'Description' %>
  </div>

  <div class="form-group">
    <%= form.text_field :order, id: :order,  class: 'form-control', placeholder: 'Order' %>
  </div>

  <div class="form-group">
		  	<label class="btn btn-primary btn-block">
		  		Upload main image file <%= form.file_field :main_image, style: 'display:none;' %>
		  	</label>
  </div>

  <div class="form-group">
  <label class="btn btn-primary btn-block">
    Upload thumb image file <%= form.file_field :thumb_image, style: 'display:none;' %>
  </label>
  </div>

  <div class="form-group">
	<%= form.radio_button :status, 'draft' %>
	<%= form.label :status, 'Draft' %>
	<%= form.radio_button :status, 'published' %>
	<%= form.label :status, 'Published' %>
  </div>

    <div class="form-group">
      <%= form.submit 'Submit', class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
